<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>


    <ul class="nav nav-pills">
        <li class="nav-item">
            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Customer", "Index", "Customer", null, new { @class = "nav-link" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Book", "Index", "Book", null, new { @class = "nav-link" })
        </li>
    </ul>

    <div>
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script>
        $(document).ready(function () {
            $('#btnPlus').click(function (e) {
                e.preventDefault();

                $.ajax({
                    url: '/Customer/AddNewBook',
                    type: 'GET',
                    success: function (result) {
                        $('#QualiContain').append(result);
                    },
                    error: function () {
                        alert("An error occurred while adding a new book. Please try again.");
                    }
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#btnDeleteBook').click(function (e) {
                e.preventDefault();

                var bookId = $(this).data('id'); // Get the book ID from the data attribute

                if (confirm("Are you sure you want to delete this book?")) {
                    $.ajax({
                        url: '/Book/DeleteBook', // Adjust the URL according to your routing
                        type: 'DELETE',
                        data: { id: bookId },
                        success: function (response) {
                            if (response.success) {
                                alert("Book deleted successfully.");
                                location.reload(); // Reload the page to refresh the book list
                            } else {
                                alert("Error deleting book. Please try again.");
                            }
                        },
                        error: function () {
                            alert("An error occurred while deleting the book. Please try again.");
                        }
                    });
                }
            });
        });
    </script>


    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
